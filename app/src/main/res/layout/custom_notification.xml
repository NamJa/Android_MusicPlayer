<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dp">

    <ImageView
        android:id="@+id/notiAlbumArt"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_width="90dp"
        android:layout_height="90dp"/>
    <TextView
        android:id="@+id/notiMusicTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:maxLines="2"
        android:layout_marginTop="10dp"
        android:textSize="18sp"
        android:text="sample.mp3"
        android:layout_toRightOf="@id/notiAlbumArt"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toRightOf="@id/notiAlbumArt"
        android:layout_below="@id/notiMusicTitle">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/notiPrevButton"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@android:drawable/ic_media_previous"/>
            <ImageView
                android:id="@+id/notiPlayButton"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@android:drawable/ic_media_play"
                android:visibility="gone"/>
            <ImageView
                android:id="@+id/notiPauseButton"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@android:drawable/ic_media_pause"/>
            <ImageView
                android:id="@+id/notiNextButton"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@android:drawable/ic_media_next"/>
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>